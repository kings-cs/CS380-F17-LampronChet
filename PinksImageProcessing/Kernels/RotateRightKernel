__kernel void rotateRight(__global const int *sourceData, __global int *resultData, __global const int *dimensions){
				int index = get_global_id(0);
				int width = dimensions[0];
				int height = dimensions[1];
				
				int row = index / width;
				
				int col = index % width;
				
				int newRow = col;
				
				int newCol = height - row - 1;
				
				int newIndex = newRow * height + newCol;
				
				resultData[newIndex] = sourceData[index];
}